
  <ul class="list-inline text-center">
    <div class="row">
      <% data.users.each do |user| %>
        <li>
          <div class="col-xs-12 col-sm-6 col-md-4">
            <div class="card">
              <%= image_tag "https://kitt.lewagon.com/placeholder/users/#{user.github_nickname}", class: "avatar-large" %>
              <h3><%= user.name.capitalize %></h3>
              <%= link_to "visit my page", "https://#{user.github_nickname}.github.io/profile" %>
            </div>
          </div>
        </li>
      <% end %>
    </div>
    </ul>
  </div>
